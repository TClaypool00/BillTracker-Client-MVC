@model BillTrackerClient.App.Models.BillModel
@{
    ViewData["Title"] = "Add a Bill";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form formaction="post" asp-action="Add">
            <div class="form-group">
                <input asp-for="BillName" class="form-control" placeholder="@Html.DisplayNameFor(m => m.BillName)" />
                <span asp-validation-for="BillName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="AmountDue" class="form-control" placeholder="@Html.DisplayNameFor(m => m.AmountDue)" />
                <span asp-validation-for="AmountDue" class="text-danger"></span>
            </div>

            <div class="form-group">>
                <input asp-for="DateDue" class="form-control" />
                <span asp-validation-for="DateDue" class="text-danger"></span>
            </div>

            <div class="form-group">
                <select class="form-control" asp-for="CompanyId" asp-items="@Model.DropDown"></select>
            </div>
            <partial name="_CreateCompany"></partial>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">@ViewData["Title"]</button>
            </div>
        </form>
    </div>
</div>
